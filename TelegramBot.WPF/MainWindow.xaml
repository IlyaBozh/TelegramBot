                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5*"></RowDefinition>
                                <RowDefinition Height="10*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Label x:Name="Lable_QuestionTitle" Content="Твой вопрос:" Margin="0,0,4,0" Visibility="Visible" Height="26"/>
                            <TextBox x:Name="TextBox_Question"  Margin="4,4,4,25" Visibility="Visible" Grid.Row="1"/>

                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="GroupBox_AddVariants" Grid.Row="4" Visibility="Hidden" Margin="1,1,1,86" BorderThickness="0" Grid.ColumnSpan="2" Grid.RowSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8*"></RowDefinition>
                                <RowDefinition Height="13*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Label Content="Варианты ответа:" Margin="4,0,4,0" Visibility="Visible" Height="26"/>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="9*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TextBox_OneOrFewVariants" Margin="4, 4, 4, 4" Visibility="Visible"/>
                                <Grid Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"></RowDefinition>
                                        <RowDefinition Height="1*"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Button x:Name="Button_AddOneOrFewVariants" Content="+"  Margin ="4, 3, 4, 0" Visibility="Visible"/>
                                    <Button x:Name="Button_RemoveOneOrFewVariants" Content="-" Margin ="4, 0, 4, 3" Visibility="Visible" Grid.Row="1"/>
                                </Grid>

